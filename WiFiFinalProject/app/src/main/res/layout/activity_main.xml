<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Collect traning data"
        android:id="@+id/btnCollect"
        android:layout_below="@+id/btnSaveLocation"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editLocation"
        android:hint = "Enter your current location"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/btnCollect"
        android:layout_marginTop="166dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save your location"
        android:id="@+id/btnSaveLocation"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/editLocation" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Collect test data"
        android:id="@+id/btnTest"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/btnCollect" />
</RelativeLayout>
